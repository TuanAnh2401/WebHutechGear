@model Web_Hutech_Gear.Models.EF.Contact
@{
    ViewBag.Title = "Chi tiết liên hệ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/contact" class="nav-link">Liên Hệ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Chi tiết</a>
        </li>
    </ul>
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Chi tiết liên hệ</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/contact">Liên hệ</a></li>
                    <li class="breadcrumb-item active">Chi Tiết</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Chi tiết liên hệ</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Tên khách hàng</label>
                        <p class="form-control">@Model.Name</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Email</label>
                        <p class="form-control">@Model.Email</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Số điện thoại</label>
                        <p class="form-control">@Model.PhoneNumber</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Ngày gửi</label>
                        <p class="form-control">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Tin nhắn</label>
                        <p class="form-control" style="height: auto; width: auto;">@Model.Message</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="flex-grow-1"></div>
                    <div style="position: absolute; bottom: 0; margin-left:20px; margin-bottom:20px">
                        <a href="https://mail.google.com/mail/?view=cm&fs=1&tf=1&to=@Model.Email" target="_blank" class="btn btn-primary">Trả lời</a>
                        <a href="/admin/contact" class="btn btn-danger">Quay lại</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->