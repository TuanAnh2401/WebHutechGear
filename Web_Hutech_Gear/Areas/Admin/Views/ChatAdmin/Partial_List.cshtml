<ul class="list-unstyled mb-0">
    @foreach (var user in ViewBag.ListChat)
    {
        <li class="p-2 border-bottom" style="background-color: #eee; margin-bottom: 20px; cursor: pointer; ">
            <div class="count-chat chat-user d-flex justify-content-between" data-url="@Url.Action("Chat", "ChatAdmin", new { receiverId = user.Id })">
                <div class="d-flex flex-row">
                    <img src="~/Content/Images/@user.Avatar" alt="avatar"
                         class="rounded-circle d-flex align-self-center me-3 shadow-1-strong" width="60">
                    <div class="pt-1" style="padding-left:20px">
                        <p class="fw-bold mb-0">@user.FullName</p>
                        <p class="small text-muted">@user.LastMessage</p>
                    </div>
                </div>
                <div class="pt-1">
                    <p class="small text-muted mb-1">@user.Timestamp.ToString("dd/MM/yyyy HH:mm")</p>
                    <span class="badge bg-danger float-end">@user.IsRead</span>
                </div>
            </div>
        </li>
    }
</ul>
