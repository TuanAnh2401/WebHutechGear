@model Web_Hutech_Gear.Models.EF.Contact
@using Web_Hutech_Gear.Models.Support
@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="inner_banner" class="section inner_banner_section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="full">
                    <div class="title-holder">
                        <div class="title-holder-cell text-left">
                            <h1 class="page-title">Liên Hệ</h1>
                            <ol class="breadcrumb">
                                <li><a href="/home/index">Trang Chủ</a></li>
                                <li class="active">Liên Hệ</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end inner page banner -->
<div class="section padding_layout_1">
    <div class="container">
        <div class="row">
            <div class="col-xl-2 col-lg-2 col-md-12 col-sm-12 col-xs-12"></div>
            <div class="col-xl-8 col-lg-8 col-md-12 col-sm-12 col-xs-12">
                <div class="row">
                    <div class="full">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="main_heading text_align_center">
                                <h2>Liên Lạc</h2>
                            </div>
                        </div>
                        <div class="contact_information">
                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 adress_cont">
                                <div class="information_bottom text_align_center">
                                    <div class="icon_bottom"> <i class="fa fa-road" aria-hidden="true"></i> </div>
                                    <div class="info_cont">
                                        <h4>@SettingHelper.GetValue("SettingAddress")</h4>
                                        <p>Melbourne Australia</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 adress_cont">
                                <div class="information_bottom text_align_center">
                                    <div class="icon_bottom"> <i class="fa fa-user" aria-hidden="true"></i> </div>
                                    <div class="info_cont">
                                        <h4>@SettingHelper.GetValue("SettingHotline")</h4>
                                        <p>Thứ 2 - Thứ 6 8:30 sáng - 6:30 tối</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 adress_cont">
                                <div class="information_bottom text_align_center">
                                    <div class="icon_bottom"> <i class="fa fa-envelope" aria-hidden="true"></i> </div>
                                    <div class="info_cont">
                                        <h4>@SettingHelper.GetValue("SettingEmail")</h4>
                                        <p>Hổ trợ trực tuyến 24/24</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 contant_form">
                            <h2 class="text_align_center">Gửi tin nhắn</h2>
                            <div class="form_section">
                                @using (Html.BeginForm("Contact", "Home", new { }))
                                {
                                    <fieldset>
                                        <div class="row">
                                            <div class="field col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                <input class="field_custom font-con" name="Name" placeholder="Tên của bạn" type="text">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="field col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                <input class="field_custom" name="Email" placeholder="Địa chỉ Email" type="email">
                                            </div>
                                            <div class="field col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                <input class="field_custom" name="PhoneNumber" placeholder="Số điện thoại" type="text">
                                            </div>
                                            <div class="field col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <textarea class="field_custom" name="Message" placeholder="Tin nhắn"></textarea>
                                            </div>
                                            <div class="center">
                                                <button class="btn main_bt" type="submit">Gửi ngay</button>
                                            </div>
                                        </div>
                                    </fieldset>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>