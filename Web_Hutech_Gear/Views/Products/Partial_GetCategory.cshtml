@model IEnumerable<Web_Hutech_Gear.Models.EF.ProductCategory>
@using Web_Hutech_Gear.Models
@{ 
        ApplicationDbContext db = new ApplicationDbContext();
}
<ul>
    @foreach (var item in Model)
    {
        int productCount = db.Products.Where(p => p.ProductCategoryId == item.Id).Count();
        if (productCount > 0)
        {
            <li>
                <div class="row" style="cursor: pointer">
                    <input type="checkbox" class="cbkCategory" value="@item.Id" style="padding-right:5px" />
                    @item.Title
                </div>
            </li>
        }
    }
</ul>
