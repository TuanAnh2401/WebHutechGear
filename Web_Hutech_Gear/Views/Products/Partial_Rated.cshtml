@model IEnumerable<Web_Hutech_Gear.Models.EF.Comment>
@using Web_Hutech_Gear.Models
@{
    ApplicationDbContext db = new ApplicationDbContext();
}
<!-- #region Bình luận -->
@foreach (var item in Model)
{
    <div class="col-lg-10 col-md-10 col-sm-8">
        <h5>@db.Users.FirstOrDefault(p => p.Id == item.UserId).FullName</h5>
        <p><span class="c_date">@item.CreatedDate.ToString("dd-MM-yyyy")</span> </p>
        <!-- #region rating -->
        <span class="rating">
            @for (int i = 1; i <= 5; i++)
            {
                <i class="fa fa-star@(i <= item.Rating ? "" : "-o")" aria-hidden="true"></i>
            }
        </span>
        <!-- #endregion -->
        <p class="msg">
            @item.Content
        </p>

        <div class="button-repply">
            <input class="input-group-lg" placeholder="Nội dung trả lời" />
            <button>Trả Lời</button>
        </div>
    </div>
    if (null != ViewBag.ListRepplyComment)
    {
        foreach (var itemRepply in ViewBag.ListRepplyComment)
        {
            if (item.Id == itemRepply.CommentId)
            {
                string userId = itemRepply.UserId;
                <div class="replly_comment">
                    <div class="row">
                        <div class="col-lg-10 col-md-10 col-sm-9 col-xs-12">
                            <div class="full command_cont margin_bottom_0">
                                <b>@db.Users.FirstOrDefault(p => p.Id == userId).FullName</b>

                                <p class="comm_head">
                                    <span>@itemRepply.CreatedDate.ToString("dd-MM-yyyy")</span>
                                </p>
                                <p>
                                    @Html.Raw(itemRepply.Content)
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    }

}
